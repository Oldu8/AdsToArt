{
  "manifest_version": 3,
  "name": "AdsToArt",
  "version": "1.0",
  "description": "Replace ads with a picture.",
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/set_blue/*",
        "images/set_green/*",
        "images/set_flower/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
